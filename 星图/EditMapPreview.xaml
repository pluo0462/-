    </Window.Resources>
    <Grid x:Name="MainWindow" DataContext="{Binding Source={StaticResource PM}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--<ListBox Name="StarBoxs" Grid.Column="0" ItemsSource="{Binding Path=Stars}" DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="true" SelectionChanged="StarBoxs_SelectionChanged" />-->
        <ListBox Name="StarBoxs" Grid.Column="0" ItemsSource="{Binding Path=Stars}" DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="true"/>
        
        <DockPanel x:Name="StarDock" Grid.Column="1">
            <Grid Height="100" DockPanel.Dock="Top">
                <Grid.Resources>
                    <ControlTemplate x:Key="StarProperty_hcc_ct" TargetType="HeaderedContentControl">
                        <DockPanel>
                            <ContentPresenter ContentSource="Header" DockPanel.Dock="Left" Focusable="False" Width="40" VerticalAlignment="Center"/>
                            <ContentPresenter ContentSource="Content" DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </DockPanel>
                    </ControlTemplate>
                    <Style x:Key="StarProperty_hc" TargetType="HeaderedContentControl">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="BorderThickness" Value="2"/>
                        <Setter Property="Margin" Value="10"/>
                        <Setter Property="Template" Value="{StaticResource StarProperty_hcc_ct}"/>
                    </Style>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <HeaderedContentControl Grid.Row="0" Grid.Column="0" Header="Name" Style="{StaticResource StarProperty_hc}">
                    <TextBox x:Name="FIL"  Text="{Binding Path=Stars/Name}"/>
                </HeaderedContentControl>
                <HeaderedContentControl Grid.Row="1" Grid.Column="0" Header="类型" Style="{StaticResource StarProperty_hc}">
                    <!--<ComboBox Name="StarType_ComboBox" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:StarType}}}" SelectionChanged="StarType_ComboBox_SelectionChanged" />-->
                    <ComboBox Name="StarType_ComboBox" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:StarType}}}" SelectedValue="{Binding Path=Stars/StarType}" />
                </HeaderedContentControl>
                <HeaderedContentControl Grid.Row="1" Grid.Column="1" Header="类型" Style="{StaticResource StarProperty_hc}">
                    <TextBlock Name="Check" Text="{Binding Path=Stars/StarType}"/>
                </HeaderedContentControl>
            </Grid>

            <!--<ListBox DockPanel.Dock="Left" ItemsSource="{Binding Path=Stars/Lanes}" DisplayMemberPath="Type"/>-->

            <ListView DockPanel.Dock="Left" ItemsSource="{Binding Path=Stars/Lanes}">
                <!--<ListView.Resources>
                    <DataTemplate x:Key="FirstCell">
                        <TextBox Text="{Binding Path=Stars/Name, Mode=TwoWay}"/>
                    </DataTemplate>
                </ListView.Resources>-->
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding Path=Type}" />
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Endpoint1_Star.Name}"/>
                        <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Path=Endpoint2_Star.Name}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <ListView DockPanel.Dock="Left" ItemsSource="{Binding Path=Stars/Lanes}">
                <ListView.Resources>
                    <DataTemplate x:Key="FirstCell">
                        <!--<TextBox Text="{Binding RelativeSource={RelativeSource AncestorType=DockPanel}, Mode=OneWay, Path=DataContext.Stars/}"/>-->
                        <TextBlock>
                            <TextBlock.Text>
                                // 用MultiBinding, 三个Star无论何时必然有两个相同。
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="1000" Header="Star Check" CellTemplate="{StaticResource FirstCell}">

                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <TextBox x:Name="Validate" DockPanel.Dock="Right" Text="{Binding Path=Stars/Lanes[0].Type}"/>
        </DockPanel>
    </Grid>
</Window>
