                                <RowDefinition Height="12"/>
                                <RowDefinition Height="36"/>
                                <RowDefinition Height="12"/>
                            </Grid.RowDefinitions>
                            <Grid.Background>
                                <SolidColorBrush Opacity="0"/>
                            </Grid.Background>
                            <!--<Image Source="src\36px-Pc_a_star.png" Grid.Row="1"/>-->
