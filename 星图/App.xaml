                            <TextBlock Grid.Row="2" FontSize="10" Foreground="white" FontWeight="Bold" Text="{Binding Path=Name}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
