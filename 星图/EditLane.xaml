<Window x:Class="星图.EditLane"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:星图"
        mc:Ignorable="d"
        Title="EditLane" Height="250" Width="200">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center">
            Lane Type
        </TextBlock>
        <ComboBox Name="LaneType_ComboBox" Width="100" ItemsSource="{Binding Source={local:EnumBindingSource {x:Type local:LaneType}}}">
            
        </ComboBox>
        <TextBlock HorizontalAlignment="Center">
            Endpoint 1
        </TextBlock>
        <ComboBox Name="Endpoint1_ComboBox" Width="100" ItemsSource="{Binding Path=Stars}" DisplayMemberPath="Name">
            
        </ComboBox>
        <TextBlock HorizontalAlignment="Center">
            Endpoint 2
        </TextBlock>
        <ComboBox Name="Endpoint2_ComboBox" Width="100" ItemsSource="{Binding Path=Stars}" DisplayMemberPath="Name">
            
        </ComboBox>
        <Button Width="100" Margin="40" Click="Button_Click">
            Submit
        </Button>
    </StackPanel>
</Window>
